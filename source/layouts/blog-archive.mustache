<div>
    <article role="article">
        <header>
            <h1 class="entry-title">Blog Archive</h1>
        </header>

        <div id="blog-archives">
        {{#archives}}
            <h2>{{year}}</h2>

            {{#articles}}
                <article>
                    <h1><a href="{{link}}">{{title}}</a></h1>
                    <time datetime="{{time}}" pubdate><span class='month'>{{month}}</span> <span
                            class='day'>{{day}}</span> <span class='year'>{{year}}</span></time>
                </article>
            {{/articles}}
        {{/archives}}
        </div>
    </article>
</div>